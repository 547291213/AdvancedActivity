<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xkfeng.advancedactivity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.example.xkfeng.advancedactivity.ViewScroll.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:back_color="#8000"
            app:text_color="#000"
            app:text="自定义标题栏"
            >

        </com.example.xkfeng.advancedactivity.ViewScroll.TitleView>
        <com.example.xkfeng.advancedactivity.ViewScroll.CustomView
            android:id="@+id/custom_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#000"



            />

        <com.example.xkfeng.advancedactivity.ViewScroll.MyTextView
            android:id="@+id/my_textview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Hello World"
            android:gravity="center"
            android:textSize="20sp"
            />

        <com.example.xkfeng.advancedactivity.ViewScroll.RectView
            android:id="@+id/rectview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#a7a7a7"
            android:layout_gravity="center"
            android:padding="50dp"
            app:rect_color="#000"


            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="NextClick"
            android:text="In View"
            android:textSize="20sp"


            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
